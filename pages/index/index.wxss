/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50% ;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.up{
  width:180rpx;
  height:180rpx;
 
  border-radius:0.6rem 0.6rem 0 0;
  border:1rpx 1rpx 0 1rpx solid #ccc;
  background-color: #CDBA96;
  
}
.up text{
  display: -webkit-box;
  text-align: center;
  font-size: 26rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow:hidden;
  text-overflow: ellipsis
}
.down text{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow:hidden;
  text-align: center;
  text-overflow: ellipsis
}
.down{
  width:180rpx;
  height:60rpx;
 
  border-radius:0 0 0.6rem 0.6rem ;
  border:0 1rpx 1rpx 1rpx solid #ccc;
  background-color: #CD8162;
  padding:0
}
.neirong{
  float: left;
  margin: 0 auto;
  padding:0 15rpx 15rpx 15rpx
}
.content-list{
  width: 80%; 
}
.addnote image{
  width:160rpx;
  height:220rpx;
  float:left;
  border:dashed 1px #ccc;
  padding: 10rpx;
  
}